   Questão 4
#include <stdio.h>
#include <stdlib.h>


int main() {

 // Criando variáveis
 
   float num1;
   float num2;
   
  // Exibindo variáveis
  
    printf ("Qual o primeiro valor? ");
      scanf("%f",&num1,"\n");
    
    printf("Qual o segundo valor? ");
      scanf("%f",&num2,"\n");
	  
	float diferenca = num1-num2;
	
	printf("A diferenca dos dois numeros e: %.2f",diferenca);   

return 0;
}

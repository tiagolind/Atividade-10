  Questão 8

#include <stdio.h>
#include <stdlib.h>

int main (){

//Criando variáveis 

   float numero1;

  //Exibindo variáveis

printf("Quantos Fahrenheit esta: ");
   scanf("%f",&numero1,"\n");


   float valor = (numero1-32)/1.8;

printf("Em celsius esta em: %.2f",valor);

return 0;

}
----------------------------------------------------
   Questão 9

#include <stdio.h>
#include <stdlib.h>

int main (){

//Criando variáveis 

   float diametro,raio,comprimento,area;
   float pi = 3.14;
   
  //Exibindo variáveis

    printf("Qual o raio da circunferencia: ");
      scanf("%f",&raio,"\n");


     comprimento = 2 * pi * raio;
       diametro= raio * 2;
         area = pi * (raio* raio);

    printf("\nComprimento: %.2f", comprimento);
    printf("\nDiametro: %.2f",diametro);
    printf("\nArea: %.2f",area );
    
return 0;

}

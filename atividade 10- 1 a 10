#include <stdio.h>
#include <stdlib.h>

int main (){

//Criando variáveis 

   float numero1;
   float numero2;

  //Exibindo variáveis

printf("Digite o primeiro valor: ");
   scanf("%f",&numero1,"\n");

printf("Digite o segundo valor: ");
   scanf("%f",&numero2,"\n");

   float valor = numero1/numero2;

printf("A divisao dos dois numeros e: %.2f",valor);

return 0;

}

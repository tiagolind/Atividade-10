Questão de 1 a 10 da atividade 10

(Questão 1)
#include <stdio.h>
#include <stdlib.h>


int main() {

float nota1;
float nota2;
float nota3;
float nota4;

printf("Digite a primeira nota: ");
scanf("%f", &nota1);

printf("Digite a segunda nota: ");
scanf("%f", &nota2);        

printf("Digite a terceira nota: ");
scanf("%f", &nota3);

printf("Digite a quarta nota: ");
scanf("%f", &nota4);

float total = nota1+nota2+nota3+nota4;
printf("A nota Total do aluno e: %.2f", total);

return 0;
}
